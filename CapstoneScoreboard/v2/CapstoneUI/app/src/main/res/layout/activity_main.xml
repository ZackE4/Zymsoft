<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity">

    <TextView
        android:id="@+id/txtTeam1"
        android:layout_width="200dp"
        android:layout_height="100dp"
        android:text="Team 1"
        android:textAlignment="center"
        android:textSize="30sp"

        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/txtTeam2"
        android:layout_width="200dp"
        android:layout_height="100dp"
        android:text="Team 2"
        android:textAlignment="center"
        android:textSize="30sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.996"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/txtTeam1TimeOuts"
        android:layout_width="60dp"
        android:layout_height="100dp"
        android:background="#FFEB3B"
        android:onClick="setTimeOut"
        android:text="5"
        android:textAlignment="center"
        android:textSize="24sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toEndOf="@+id/txtTeam1"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/txtTeam2TimeOuts"
        android:layout_width="60dp"
        android:layout_height="100dp"
        android:background="#FFEB3B"
        android:onClick="setTimeOut"
        android:text="5"
        android:textAlignment="center"
        android:textSize="24sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.698"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/txtTimer"
        android:layout_width="200dp"
        android:layout_height="100dp"
        android:background="#6B655D5D"
        android:onClick="setTime"
        android:text="0:00"
        android:textAlignment="center"
        android:textSize="30sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.499"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/txtTeam1Score"
        android:layout_width="363dp"
        android:layout_height="98dp"
        android:background="#FFEB3B"
        android:onClick="setScore"
        android:text="Team 1 Score : 33"
        android:textAlignment="center"
        android:textSize="36sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/txtTeam1" />

    <TextView
        android:id="@+id/txtTeam1Fouls"
        android:layout_width="363dp"
        android:layout_height="98dp"
        android:background="#FFEB3B"
        android:onClick="setFoul"
        android:text="Fouls : 3"
        android:textAlignment="center"
        android:textSize="36sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/txtTeam1Score" />

    <TextView
        android:id="@+id/txtTeam2Fouls"
        android:layout_width="363dp"
        android:layout_height="98dp"
        android:background="#FFEB3B"
        android:onClick="setFoul"
        android:text="Fouls : 3"
        android:textAlignment="center"
        android:textSize="36sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.994"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/txtTeam2Score" />

    <TextView
        android:id="@+id/txtTeam2Score"
        android:layout_width="363dp"
        android:layout_height="98dp"
        android:background="#FFEB3B"
        android:onClick="setScore"
        android:text="Team 2 Score : 33"
        android:textAlignment="center"
        android:textSize="36sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.994"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/txtTeam2" />

    <Button
        android:id="@+id/btnHorn"
        android:layout_width="731dp"
        android:layout_height="66dp"
        android:layout_marginTop="284dp"
        android:onClick="soundHorn"
        android:text="Horn"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

</androidx.constraintlayout.widget.ConstraintLayout>