<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity">

    <TextView
        android:id="@+id/txtTeam1"
        android:layout_width="200dp"
        android:layout_height="100dp"
        android:text="Team 1"
        android:textAlignment="center"
        android:textSize="30sp"

        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/txtTeam2"
        android:layout_width="200dp"
        android:layout_height="100dp"
        android:text="Team 2"
        android:textAlignment="center"
        android:textSize="30sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.996"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/txtTeam1TimeOuts"
        android:layout_width="115dp"
        android:layout_height="38dp"
        android:background="#FFEB3B"
        android:onClick="addTimeout"
        android:tag="team1"
        android:text="5"
        android:textAlignment="center"
        android:textSize="24sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toEndOf="@+id/txtTeam1"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/txtTeam2TimeOuts"
        android:layout_width="115dp"
        android:layout_height="38dp"
        android:background="#FFEB3B"
        android:onClick="addTimeout"
        android:tag="team2"
        android:text="5"
        android:textAlignment="center"
        android:textSize="24sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.686"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <Button
        android:id="@+id/btnTimer"
        android:layout_width="141dp"
        android:layout_height="55dp"
        android:layout_marginTop="100dp"
        android:background="#6B655D5D"
        android:onClick="toggleTime"
        android:text="Start/Stop Timer"
        android:textAlignment="center"
        android:textSize="18sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/txtTeam1Score"
        android:layout_width="243dp"
        android:layout_height="100dp"
        android:background="#FFEB3B"
        android:onClick="setScore"
        android:tag="team1"
        android:text="Team 1 Score : 33"
        android:textAlignment="center"
        android:textSize="36sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/txtTeam1" />

    <TextView
        android:id="@+id/txtTeam1Fouls"
        android:layout_width="204dp"
        android:layout_height="80dp"
        android:layout_marginTop="40dp"
        android:background="#FFEB3B"
        android:onClick="setFoul"
        android:tag="team1"
        android:text="Fouls : 3"
        android:textAlignment="center"
        android:textSize="36sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/txtTeam1Score" />

    <TextView
        android:id="@+id/txtTeam2Fouls"
        android:layout_width="204dp"
        android:layout_height="80dp"
        android:layout_marginTop="40dp"
        android:background="#FFEB3B"
        android:onClick="setFoul"
        android:tag="team2"
        android:text="Fouls : 3"
        android:textAlignment="center"
        android:textSize="36sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.996"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/txtTeam2Score" />

    <TextView
        android:id="@+id/txtTeam2Score"
        android:layout_width="252dp"
        android:layout_height="100dp"
        android:background="#FFEB3B"
        android:onClick="setScore"
        android:tag="team2"
        android:text="Team 2 Score : 33"
        android:textAlignment="center"
        android:textSize="36sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.994"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/txtTeam2" />

    <Button
        android:id="@+id/btnHorn"
        android:layout_width="227dp"
        android:layout_height="57dp"
        android:layout_marginTop="284dp"
        android:onClick="soundHorn"
        android:text="Horn"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <Button
        android:id="@+id/btnSetTimer"
        android:layout_width="99dp"
        android:layout_height="43dp"
        android:layout_marginTop="48dp"
        android:onClick="setTimer"
        android:text="Set Timer"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <Button
        android:id="@+id/btnShotClock"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="54dp"
        android:layout_marginTop="20dp"
        android:layout_marginEnd="25dp"
        android:onClick="resetShotClock"
        android:text="Reset Shot Clock"
        app:layout_constraintEnd_toStartOf="@+id/txtTeam2Score"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toEndOf="@+id/txtTeam1Score"
        app:layout_constraintTop_toBottomOf="@+id/btnTimer" />

    <Button
        android:id="@+id/btnSetShotClock"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="92dp"
        android:layout_marginTop="8dp"
        android:layout_marginEnd="53dp"
        android:onClick="setShockClock"
        android:text="Set Shot Clock"
        app:layout_constraintEnd_toStartOf="@+id/txtTeam2Score"
        app:layout_constraintHorizontal_bias="0.44"
        app:layout_constraintStart_toEndOf="@+id/txtTeam1Score"
        app:layout_constraintTop_toBottomOf="@+id/btnShotClock" />

    <Button
        android:id="@+id/btnCallTimeout"
        android:layout_width="90dp"
        android:layout_height="44dp"
        android:onClick="setTimeOut"
        android:text="Set Timeouts"
        android:textSize="10sp"
        app:layout_constraintEnd_toStartOf="@+id/txtTeam2TimeOuts"
        app:layout_constraintStart_toEndOf="@+id/txtTeam1TimeOuts"
        app:layout_constraintTop_toTopOf="parent" />

</androidx.constraintlayout.widget.ConstraintLayout>